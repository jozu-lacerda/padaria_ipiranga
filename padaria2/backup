<script>
  // Exemplo simples: intercepta o envio para exibir os dados no console (pode ser alterado)
  document.getElementById('pedidoForm').addEventListener('submit', function (e) {
    e.preventDefault(); // remover se quiser envio real
    const formData = new FormData(this);
    const obj = {};
    formData.forEach((v, k) => {
      // se múltiplos valores existirem (checkboxes) isso cuidaria, aqui é simples
      obj[k] = v;
    });
    // mostra no console e em alert resumido
    console.log('Dados do formulário:', obj);
    alert('Pedido preparado (dados enviados para console). Verifique o console do navegador.');
  });
</script>


