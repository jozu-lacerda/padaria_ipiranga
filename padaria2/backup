    <label for="telefone">Telefone (required, com pattern)</label><br/>
    <!-- Pattern aceita formatos como (11) 91234-5678 ou 11912345678 -->
    <input
      type="tel"
      id="telefone"
      name="telefone"
      required
      placeholder="(11) 91234-5678"
      pattern="^\(?\d{2}\)?\s?\d{4,5}-?\d{4}$"
      aria-describedby="telefoneHelp"
    />
    <div id="telefoneHelp">Formato esperado: (XX) XXXXX-XXXX ou (XX) XXXX-XXXX</div>
    <br/>

    <label for="email">Email (required)</label><br/>
    <input type="email" id="email" name="email" required placeholder="seu@exemplo.com" />
  </fieldset>

  <br/>

  <!-- Seção 2 - Detalhes do Pedido -->
  <fieldset>
    <legend>Seção 2 - Detalhes do Pedido</legend>

    <div>
      <p>Tipo de produto (escolha uma):</p>
